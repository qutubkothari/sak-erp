# Database
DATABASE_URL="postgresql://saif_admin:saif_secure_pass_2025@localhost:5432/saif_erp"
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL="redis://:saif_redis_pass@localhost:6379"

# RabbitMQ
RABBITMQ_URL="amqp://saif_admin:saif_rabbit_pass@localhost:5672"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"

# MinIO / S3
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="saif_admin"
MINIO_SECRET_KEY="saif_minio_pass_2025"
MINIO_USE_SSL=false
MINIO_BUCKET="saif-erp-documents"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRY="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRY="7d"

# Application
NODE_ENV="development"
APP_PORT=3000
API_PORT=4000

# CORS
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# Email
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@saifautomations.com"

# Tally Integration
TALLY_SERVER_URL="http://localhost:9000"
TALLY_COMPANY_NAME="Saif Automations"
TALLY_SYNC_ENABLED=true

# Feature Flags
ENABLE_DEMO_MODULE=true
ENABLE_WARRANTY_MODULE=true
ENABLE_SERVICE_MODULE=true
ENABLE_BLOCKCHAIN_UID=false

# Multi-tenant
DEFAULT_TENANT="saif-kolkata"
TENANT_ISOLATION_STRATEGY="shared-schema"

# Monitoring
SENTRY_DSN=""
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
